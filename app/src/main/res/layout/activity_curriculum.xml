<?xml version="1.0" encoding="utf-8"?>
<androidx.drawerlayout.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/curriculum_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <!--<ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@color/gray_1">


            <ImageView
                android:id="@+id/iv_logo"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_marginVertical="15dp"
                android:background="@null"
                android:src="@drawable/main_logo"></ImageView>

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/btn_open"
                android:layout_width="40dp"
                android:layout_height="50dp"
                android:layout_alignRight="@id/iv_logo"
                android:layout_marginVertical="10dp"
                android:layout_marginRight="15dp"
                android:background="@drawable/ic_burger" />

            <EditText
                android:id="@+id/et_search"
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:layout_below="@id/iv_logo"
                android:layout_marginStart="20dp"
                android:layout_marginTop="10dp"
                android:layout_marginEnd="20dp"
                android:layout_marginBottom="20dp"
                android:background="@drawable/textview_edge"
                android:drawableStart="@drawable/ic_search"
                android:drawablePadding="5dp"
                android:hint="여기에 입력하세요"
                android:paddingLeft="15dp"
                android:textSize="15sp" />

        </RelativeLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:text="전공필수"
            android:textSize="18sp"
            android:background="@color/blue_2"
            android:padding="8dp"
            android:textStyle="bold"
            android:drawableRight="@drawable/below_arrow_resize">
        </TextView>

        <TableLayout
            android:layout_width="match_parent"
            android:layout_height="40dp">

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:weightSum="13"
                android:gravity="center"
                android:background="@color/blue_1">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="전공구분"
                    android:textSize="15sp"
                    android:textStyle="bold"
                    android:gravity="center">
                </TextView>

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="6"
                    android:text="교과목명"
                    android:textSize="15sp"
                    android:textStyle="bold"
                    android:gravity="center">
                </TextView>

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="2"
                    android:text="학수번호"
                    android:textSize="15sp"
                    android:textStyle="bold"
                    android:gravity="center">
                </TextView>

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="2"
                    android:text="이수권장"
                    android:textSize="15sp"
                    android:textStyle="bold"
                    android:gravity="center">
                </TextView>

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="학점"
                    android:textSize="15sp"
                    android:textStyle="bold"
                    android:gravity="center">
                </TextView>

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="찜"
                    android:textSize="15sp"
                    android:textStyle="bold"
                    android:gravity="center">
                </TextView>

            </TableRow>

        </TableLayout>

        <ListView
            android:id="@+id/lv_curriculum_course"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>




        <!--로그인 페이지로 이동하는 버튼-->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1">
        </LinearLayout>

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btn_list"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="list">
        </androidx.appcompat.widget.AppCompatButton>

        <Button
            android:id="@+id/btn_login_page"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="LOGIN PAGE">
        </Button>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1">
        </LinearLayout>

        <LinearLayout
            android:id="@+id/bottomNavi"
            android:layout_width="match_parent"
            android:layout_height="65dp"
            android:layout_gravity="bottom"
            android:background="@color/blue_5"
            android:gravity="center">

            <LinearLayout
                android:id="@+id/naviBtn_curriculum"
                android:layout_width="60dp"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:gravity="center"
                android:layout_marginHorizontal="10dp">

                <ImageView
                    android:layout_width="35dp"
                    android:layout_height="35dp"
                    android:src="@drawable/navi_curriculum"
                    app:tint="@color/blue_3" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="교과과정"
                    android:textColor="@color/blue_3"
                    android:textSize="11dp" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/naviBtn_jjimList"
                android:layout_width="60dp"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:gravity="center"
                android:layout_marginHorizontal="10dp">

                <ImageView
                    android:layout_width="35dp"
                    android:layout_height="35dp"
                    android:src="@drawable/navi_jjim_list"
                    app:tint="@color/blue_3" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="찜리스트"
                    android:textSize="11dp"
                    android:textColor="@color/blue_3" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/naviBtn_lectureRecommendation"
                android:layout_width="60dp"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:gravity="center"
                android:layout_marginHorizontal="10dp">

                <ImageView
                    android:layout_width="35dp"
                    android:layout_height="35dp"
                    android:src="@drawable/navi_lecture_recommendation"
                    app:tint="@color/blue_3" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="강의추천"
                    android:textColor="@color/blue_3"
                    android:textSize="11dp" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/naviBtn_gradeManagement"
                android:layout_width="60dp"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:gravity="center"
                android:layout_marginHorizontal="10dp">

                <ImageView
                    android:layout_width="35dp"
                    android:layout_height="35dp"
                    android:src="@drawable/navi_grade_management"
                    app:tint="@color/blue_3" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="학점관리"
                    android:textSize="11dp"
                    android:textColor="@color/blue_3" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/naviBtn_myPage"
                android:layout_width="60dp"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:gravity="center"
                android:layout_marginHorizontal="10dp">

                <ImageView
                    android:layout_width="35dp"
                    android:layout_height="35dp"
                    android:src="@drawable/navi_my_page"
                    app:tint="@color/blue_3" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="마이페이지"
                    android:textSize="11dp"
                    android:textColor="@color/blue_3" />

            </LinearLayout>

        </LinearLayout>

    </LinearLayout>
    <include layout="@layout/activity_curriculum_sidebar"/>

</androidx.drawerlayout.widget.DrawerLayout>