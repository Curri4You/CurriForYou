<?xml version="1.0" encoding="utf-8"?>
<androidx.drawerlayout.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/curriculum_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <!--고정된 상단 영역-->
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/gray_1">

            <ImageView
                android:id="@+id/iv_logo"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_marginVertical="15dp"
                android:background="@null"
                android:src="@drawable/main_logo">
            </ImageView>

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/btn_open"
                android:layout_width="40dp"
                android:layout_height="50dp"
                android:layout_alignRight="@id/iv_logo"
                android:layout_marginVertical="10dp"
                android:layout_marginRight="15dp"
                android:background="@drawable/ic_burger" />

            <EditText
                android:id="@+id/et_search"
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:layout_below="@id/iv_logo"
                android:layout_marginStart="20dp"
                android:layout_marginTop="10dp"
                android:layout_marginEnd="20dp"
                android:layout_marginBottom="20dp"
                android:background="@drawable/textview_edge"
                android:drawableStart="@drawable/ic_search"
                android:drawablePadding="5dp"
                android:hint="여기에 입력하세요"
                android:paddingLeft="15dp"
                android:textSize="15sp" />

        </RelativeLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_dialog"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:text="전공필수"
                android:textSize="18sp"
                android:background="@color/blue_2"
                android:padding="8dp"
                android:textStyle="bold"
                android:drawableRight="@drawable/below_arrow_resize">
            </TextView>

            <TableLayout
                android:layout_width="match_parent"
                android:layout_height="40dp">

                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:weightSum="13"
                    android:gravity="center"
                    android:background="@color/blue_1">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="전공구분"
                        android:textSize="15sp"
                        android:textStyle="bold"
                        android:gravity="center">
                    </TextView>

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="6"
                        android:text="교과목명"
                        android:textSize="15sp"
                        android:textStyle="bold"
                        android:gravity="center">
                    </TextView>

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="2"
                        android:text="학수번호"
                        android:textSize="15sp"
                        android:textStyle="bold"
                        android:gravity="center">
                    </TextView>

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="2"
                        android:text="개설여부"
                        android:textSize="15sp"
                        android:textStyle="bold"
                        android:gravity="center">
                    </TextView>

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="학점"
                        android:textSize="15sp"
                        android:textStyle="bold"
                        android:gravity="center">
                    </TextView>

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="찜"
                        android:textSize="15sp"
                        android:textStyle="bold"
                        android:gravity="center">
                    </TextView>

                </TableRow>

            </TableLayout>
        </LinearLayout>

