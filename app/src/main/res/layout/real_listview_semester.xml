<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:background="@drawable/tv_edge_gray3"
    android:layout_marginHorizontal="15dp"
    android:layout_marginVertical="10dp">

    <TextView
        android:id="@+id/gm_list_semester"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="1학년 1학기"
        android:textSize="20sp"
        android:textStyle="bold"
        android:gravity="center"
        android:layout_margin="15dp">
    </TextView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:weightSum="3"
        android:layout_margin="25dp">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:gravity="center">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="총 평점">
            </TextView>

            <TextView
                android:id="@+id/gm_list_totalGrade"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="94.3"
                android:textSize="22sp"
                android:textStyle="bold">
            </TextView>

        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:gravity="center">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="전공 평점">
            </TextView>

            <TextView
                android:id="@+id/gm_list_majorGrade"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="94.3"
                android:textSize="22sp"
                android:textStyle="bold">
            </TextView>

        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:gravity="center">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="교양 평점">
            </TextView>

            <TextView
                android:id="@+id/gm_list_liberalGrade"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="94.3"
                android:textSize="22sp"
                android:textStyle="bold">
            </TextView>

        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/gm_semester_subject1"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:gravity="center">

        <ImageView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:src="@drawable/rectangle_blue5"
            android:paddingRight="20dp"
            android:paddingVertical="10dp">
        </ImageView>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="4"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_syllabus_id1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="주전공">
            </TextView>

            <TextView
                android:id="@+id/tv_course_name1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="사이버보안개론"
                android:textStyle="bold">
            </TextView>

        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="3"
            android:orientation="vertical"
            android:gravity="center">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="  ">
            </TextView>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tv_credit1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="NULL"
                    android:textColor="@color/gray_3">
                </TextView>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text=" 학점"
                    android:textColor="@color/gray_3"/>

            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:layout_weight="1"
            android:gravity="center">

            <RadioButton
                android:id="@+id/rb_grade1"
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:checked="true"
                android:background="@drawable/shape_round"
                android:gravity="center"
                android:button="@null"
                android:text="A+"
                android:textSize="15sp"
                android:textColor="@color/white">
            </RadioButton>

        </LinearLayout>

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/gray_3"/>

    <LinearLayout
        android:id="@+id/open_gm_semester"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/blue_1"
        android:gravity="center">

        <ImageView
            android:id="@+id/open_gm_arrow"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:src="@drawable/arrow_down"
            app:tint="@color/blue_2"/>

    </LinearLayout>

</LinearLayout>