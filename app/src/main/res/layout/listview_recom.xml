<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
             android:layout_width="180dp"
             android:layout_height="200dp"
    android:layout_marginRight="15dp">

    <RelativeLayout
        android:layout_width="180dp"
        android:layout_height="200dp">

        <LinearLayout
            android:layout_width="180dp"
            android:layout_height="200dp"
            android:background="@drawable/shape_rec"
            android:orientation="vertical"
            android:padding="15dp">

            <TextView
                android:id="@+id/tv_recom_course_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="컴퓨터와 우주"
                android:textSize="20dp"
                android:textStyle="bold"></TextView>

            <TextView
                android:id="@+id/tv_recom_data1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:layout_marginBottom="40dp"
                android:text="컴퓨터공학전공"
                android:textColor="@color/blue_3"
                android:textSize="12dp"></TextView>

            <TextView
                android:id="@+id/tv_recom_data2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginVertical="5dp"
                android:background="@drawable/radio_button"
                android:paddingHorizontal="10dp"
                android:paddingVertical="5dp"
                android:text="선수과목"
                android:textColor="@drawable/radio_text"
                android:textSize="10dp"></TextView>

            <TextView
                android:id="@+id/tv_recom_data3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginVertical="5dp"
                android:background="@drawable/radio_button"
                android:paddingHorizontal="10dp"
                android:paddingVertical="5dp"
                android:text="선수과목"
                android:textColor="@drawable/radio_text"
                android:textSize="10dp"></TextView>

        </LinearLayout>

        <TextView
            android:id="@+id/tv_recom_credit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:background="@color/blue_2"
            android:paddingHorizontal="12dp"
            android:paddingVertical="8dp"
            android:text="3"
            android:textSize="20dp">
        </TextView>

    </RelativeLayout>

</LinearLayout>